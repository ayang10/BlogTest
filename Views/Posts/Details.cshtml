@model BlogTest.Models.Post



<div class="container">

    <ol class="breadcrumb pull-right">
        <li>
            @Html.ActionLink("Blog", "Index")
        </li>
        <li class="active">Detail</li>
    </ol>

</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <h2 class="page-header no-margin-top">
                    <b>@Html.DisplayFor(model => model.Title)</b>
                </h2>


                @if (Model.MediaUrl != null)
                {
                    <center><img src="@Url.Content(Model.MediaUrl)" class="img-thumbnail" alt="Cinque Terre" width="500" height="500" /></center>
                }

                <p>@Html.Raw(Model.BodyText)</p>

            </section>
            <section>
                <div class="panel panel-warning-dark">
                    <div class="panel-body">
                        <a href="https://www.facebook.com/acer.yang.9" class="social-icon-ar sm no-margin-bottom facebook"><i class="fa fa-facebook"></i></a>
                        <a href="https://www.linkedin.com/in/a-yang-4b547a77" class="social-icon-ar sm no-margin-bottom linkedin"><i class="fa fa-linkedin"></i></a>

                    </div>
                </div>
            </section>

            <br />
            <div class="container">
                @Html.ActionLink("Comment", "Create", "Comments", new { id = Model.Id }, new { @class = "btn btn-default" })

            </div>

            <div class="container">
                <br />
                <h2 class="page-header no-margin-top">Comment</h2>

                @foreach (var c in Model.Comments)
            {
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <p>@Html.Raw(c.Body)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10 col-md-9 col-sm-4">
                                <i class="fa fa-clock-o"> @c.Created</i>


                                <i class="fa fa-user"> </i> @c.AuthorId

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-md-6 pull-right">
                                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                                {
                                    @Html.ActionLink("Delete >>", "Delete", "Comments", new { id = @c.Id, postId = @Model.Id }, null)
                                }
                            </div>
                        </div>
                    </div>

                }
            </div>
            <br />
       



        </div> <!--end col-md-12-->
    </div><!--end row-->
</div><!--end container-->
