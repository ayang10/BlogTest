@model BlogTest.Models.Post



<div class="container">

    <h2>Details</h2>
    <ol class="breadcrumb pull-right">
        <li>
            <a href="#">Blog</a>
        </li>
        <li class="active">Blog Item Full</li>
    </ol>
    <h4>Post</h4>
    <hr />
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <h2 class="page-header no-margin-top">Title: @Html.DisplayFor(model => model.Title)</h2>
                <img src="~/assets/img/demo/img_full.jpg" class="img-responsive imageborder" alt="Image">
                <p>
                    @Html.DisplayFor(model => model.BodyText)
                </p>
            </section>
            <section>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a href="#" class="social-icon-ar sm no-margin-bottom facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="social-icon-ar sm no-margin-bottom linkedin"><i class="fa fa-linkedin"></i></a>

                    </div>
                </div>
            </section>

        </div> <!--end col-md-12-->
    </div><!--end row-->
</div><!--end container-->
